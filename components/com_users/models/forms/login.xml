<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="credentials"
		label="COM_USERS_LOGIN_DEFAULT_LABEL"	>

		<field name="username" type="text"
			class="validate-username form-control input-lg"
			filter="username"
			label="COM_USERS_LOGIN_USERNAME_LABEL"
			size="25"
			validate="username"
			placeholder="Enter Username"
		/>

		<field name="password" type="password"
			class="validate-password form-control input-lg"
			filter="raw"
			label="JGLOBAL_PASSWORD"			
			size="25"
			placeholder="Enter Password"
		/>
	</fieldset>
	<fieldset>
		<field name="return" type="hidden" />
	</fieldset>
</form>
